#!/bin/sh

TARGET_ARCH="amd64"
EMULATED_ARCHS="$TARGET_ARCH,386,arm64"
USE_FOR_NVIDIA_SDK_MGR=true
ENABLE_EMULATOR_CMD="docker run --privileged --rm tonistiigi/binfmt --install $EMULATED_ARCHS"
RUN_SCRIPT_CMD="./run $TARGET_ARCH $USE_FOR_NVIDIA_SDK_MGR"

echo "Using QEMU"
echo $ENABLE_EMULATOR_CMD
$ENABLE_EMULATOR_CMD

echo $RUN_SCRIPT_CMD
$RUN_SCRIPT_CMD
